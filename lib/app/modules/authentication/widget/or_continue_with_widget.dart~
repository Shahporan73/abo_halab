import 'package:abo_halab_app/app/resource/app_images/app_images.dart';
import 'package:abo_halab_app/app/resource/widgets/custom_button.dart';
import 'package:abo_halab_app/app/resource/widgets/custom_text.dart';
import 'package:flutter/material.dart';

class OrContinueWithWidget extends StatelessWidget {
  final String imagePath;
  final String title;
  final Color? bgColor;
  final Color? textColor;
  final VoidCallback? onTap;
  const OrContinueWithWidget(
      {super.key, required this.imagePath, required this.title, this.bgColor, this.textColor, this.onTap});

  @override
  Widget build(BuildContext context) {
    return CustomButton(
        title: '',
        buttonColor: Colors.white,
        border: Border.all(color: Colors.grey, width: 1),
        widget: Padding(
          padding: EdgeInsets.symmetric(horizontal: 16),
          child: Row(
            children: [
              Image.asset(AppImages.facebook, height: 20, width: 20),
              Expanded(
                child: Center(
                  child: CustomText(
                    title: title,
                    fontSize: 14,
                    color: textColor ?? Colors.black,
                    fontWeight: FontWeight.w500,
                  ),
                ),
              ),
            ],
          ),
        ),
        onTap: onTap
    );
  }
}
